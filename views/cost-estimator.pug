block page-title
  .text-center.row
  h1.text-light.align-self-center  Cost Estimator
  .card.header-card.align-self-center
    .card-body
      .row.text-center
        .col.rounded.selected-light
          span.fa-stack.fa-4x(style='font-size:40px;')
            i.fa.fa-circle.fa-stack-2x.text-primary
            i.fa.fa-laptop.fa-stack-1x.fa-inverse
