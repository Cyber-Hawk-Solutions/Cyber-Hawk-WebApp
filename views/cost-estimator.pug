block post-content
  section#estimate-result
      .container
        .row
          .col.col-md-6
            .row
              h2
                | Total Cost: 
                span#total-cost 0
            .row
              h3
                | Developer Days:
                span#developer-days 0
          .col.col-md-6.col-sm-12 
            .row
              if user
                button#save-estimate.btn.btn-outline-primary.btn-block(type='button', userId=user.id) Save to Account
            .row
              .input-group.mb-3
                input#estimate-email.form-control(type='text' placeholder='Email Address' aria-label='Email Address' aria-describedby='basic-addon2')
                .input-group-append
                  button#send-estimate.btn.btn-primary(type='button') Send Me The Estimate
            .row
              p#email-sent-message.text-success.hidden Estimate sent.
              p#email-sent-message.text-danger.hidden Estimate failed to send - is the email valid?
