extends layout.pug

block body
  <div class="signup__container">
    <div class="container__child signup__thumbnail">
      <div class="thumbnail__logo">
        <img src='assets/img/Cyber Hawk Logo.png' alt='Cyber Hawk Logo' width='200' height='200'></img>
        </div>
      <div class="thumbnail__content text-center">
        <h2 class="heading--primary">Welcome to Cyber Hawk Inc.</h2>
      </div>
      <div class="signup__overlay"></div>
    </div>
    <div class="container__child signup__form">
      <form id="form1" method="POST">
        <div class="form-group">
        <div class="form-group">
          <label for="email">Email</label>
          <input class="form-control" type="text" name="username" id="email" placeholder="username.." required />
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input class="form-control" type="password" name="password" id="password" placeholder="password.." required />
        </div>
         
      </form>
      <div>
        <button type="submit" form="form1" value="submit">submit</button>
      </div>  
    </div>
  </div>

block styles
  link(rel='stylesheet' href='/assets/css/signup.css' type="text/css")

block scripts